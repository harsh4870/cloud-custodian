{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
		"suffix":"[substring(subscription().subscriptionId, 24, 12)]",
		"name":"[concat('cctestcosmosdb', variables('suffix'))]"
	},
    "resources": [
        {
            "type": "Microsoft.DocumentDB/databaseAccounts",
            "kind": "GlobalDocumentDB",
            "name": "[variables('name')]",
            "apiVersion": "2016-03-31",
            "location": "South Central US",
            "scale": null,
            "properties": {
                "ipRangeFilter": "0.0.0.0/1,128.0.0.0/1,104.42.195.92,40.76.54.131,52.176.6.30,52.169.50.45,52.187.184.26",
                "databaseAccountOfferType": "Standard",
                "consistencyPolicy": {
                    "defaultConsistencyLevel": "Session",
                    "maxIntervalInSeconds": 5,
                    "maxStalenessPrefix": 100
                },
                "name": "[variables('name')]"
            },
            "dependsOn": []
        },
		{
			"type": "Microsoft.DocumentDB/databaseAccounts/apis/databases",
			"name": "[concat(variables('name'), '/sql/cctestcdatabase')]",
			"apiVersion": "2016-03-31",
			"dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/', variables('name'))]" ],
			"properties":{
				"resource":{
					"id": "cctestcdatabase"
				}
			}
		},
		{
			"type": "Microsoft.DocumentDb/databaseAccounts/apis/databases/containers",
			"name": "[concat(variables('name'), '/sql/cctestcdatabase/cccontainer')]",
			"apiVersion": "2016-03-31",
			"dependsOn": [ "[resourceId('Microsoft.DocumentDB/databaseAccounts/apis/databases', variables('name'), 'sql', 'cctestcdatabase')]" ],
			"properties":
			{
				"resource":{
					"id":  "cccontainer",
					"partitionKey": {
						"paths": [
						"/MyPartitionKey1"
						],
						"kind": "Hash"
					},
					"indexingPolicy": {
						"indexingMode": "consistent",
						"includedPaths": [{
								"path": "/*",
								"indexes": [
									{
										"kind": "Range",
										"dataType": "number",
										"precision": -1
									},
									{
										"kind": "Range",
										"dataType": "string",
										"precision": -1
									}
								]
							}
						],
						"excludedPaths": [{
								"path": "/MyPathToNotIndex/*"
							}
						]
					}
				}
			}
		}
    ]
}